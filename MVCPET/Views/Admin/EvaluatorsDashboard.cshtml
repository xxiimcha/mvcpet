<style>
    .container {
        max-width: 400rem;
        margin-left: 0px;
        padding: 0 15px;
    }

        .container h1 {
            font-size: 2rem;
            color: #00291C;
        }

    /* Increase font size for the card numbers */
    .card-text {
        font-size: 2.5rem; /* Adjust as needed */
        font-weight: bold;
    }

    /* Color icons black */
    .card i {
        color: black;
        font-size: 2.5rem;
    }

    .card-body h5 {
        font-size: 1.5rem;
    }

    .card-text h2 {
        font-size: 1.5rem;
    }

    /* Placeholder styles */
    .placeholder {
        background-color: #f4f4f4;
        height: 600px;
        border: 1px dashed #ccc;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #777;
    }
</style>

<div class="container mt-10">
    <h1 class="text-start mb-4">Dashboard</h1>

    <!-- Cards Section -->
    <div class="row text-center mb-4">
        <div class="col-md-3">
            <div class="card bg-warning text-dark border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total of pendings</h5>
                    <h2 class="card-text">Placeholder</h2>
                    <i class="fa-regular fa-hourglass-half"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">For Interview</h5>
                    <h2 class="card-text">Placeholder</h2>
                    <i class="fa-solid fa-clipboard-question"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Approved</h5>
                    <h2 class="card-text">Placeholder</h2>
                    <i class="fa-solid fa-check"></i>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white border-0 shadow-sm">
