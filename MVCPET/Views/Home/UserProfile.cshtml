@page

@{
    Layout = "~/Views/Shared/_profile.cshtml";
}

<style>
    body {
        background-color: #85976A;
        color: #fff;
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #687451;
        border: none;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .status-pending {
        background-color: #FFD700;
        color: #000;
    }

    .status-approved {
        background-color: #28A745;
        color: #fff;
    }

    .status-cancelled {
        background-color: #DC3545;
        color: #fff;
    }

    .form-control {
        background-color: #3E563C;
        color: #fff;
    }

    .delete-btn {
        background: none;
        border: none;
        color: #fff;
        cursor: pointer;
    }

        .delete-btn:hover {
            color: #DC3545;
        }

    .profile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #00291C;
        padding: 10px;
        border-radius: 5px;
    }

        .profile-header h2 {
            flex: 1;
            margin: 0;
            color: #FCFBFA;
            text-align: left;
            font-size: 30px;
            padding-left: 20px;
        }

        .profile-header .details {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            flex: 1;
            color: #FCFBFA;
            font-size: 15px;
            padding-right: 20px;
            padding-top: 10px;
        }
</style>

<!-- Curve Bottom -->
<div class="landing-curve landing-dark-color mb-10 mb-lg-10">
    <svg viewBox="15 12 1470 48" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 11C3.93573 11.3356 7.85984 11.6689 11.7725 12H1488.16C1492.1 11.6689 1496.04 11.3356 1500 11V12H1488.16C913.668 60.3476 586.282 60.6117 11.7725 12H0V11Z" fill="currentColor" style="color: #687451;"></path>
    </svg>
</div>

<div class="container py-4">
    <div class="card p-3">

        <!-- Search bar -->
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Search pets by name, species, status...">
        </div>

        <!-- Identification -->
        <div class="profile-header mb-4">
            <h2>Juan Dela Cruz</h2>
            <div class="details">
                <p>someone@example.com</p>
                <p>63+ (000) 000 000</p>
            </div>
        </div>

        <!-- Table -->
        <table class="table text-white">
            <thead>
                <tr>
                    <th>Schedule</th>
                    <th>Species</th>
                    <th>Pet Name</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jan 1 at 2pm - 4pm</td>
                    <td>Cat</td>
                    <td>Yetti</td>
                    <td><span class="badge status-pending">Pending</span></td>
                    <td><button class="delete-btn" data-bs-toggle="modal" data-bs-target="#cancelAdoptionModal"><i class="bi bi-trash"></i></button></td>
                </tr>
                <tr>
                    <td>Jan 1 at 2pm - 4pm</td>
                    <td>Cat</td>
                    <td>Coco</td>
                    <td><span class="badge status-approved">Approved</span></td>
                    <td><button class="delete-btn" data-bs-toggle="modal" data-bs-target="#cancelAdoptionModal"><i class="bi bi-trash"></i></button></td>
                </tr>
                <tr>
                    <td>Jan 1 at 2pm - 4pm</td>
                    <td>Dog</td>
                    <td>Leo</td>
                    <td><span class="badge status-cancelled">Cancelled</span></td>
                    <!--<td><button class="delete-btn"><i class="bi bi-trash"></i></button></td>-->
                </tr>
                <tr>
                    <td>Jan 1 at 2pm - 4pm</td>
                    <td>Dog</td>
                    <td>Kukki</td>
                    <td><span class="badge status-pending">Pending</span></td>
                    <td><button class="delete-btn" data-bs-toggle="modal" data-bs-target="#cancelAdoptionModal"><i class="bi bi-trash"></i></button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- First Modal: Are you sure you want to cancel this adoption? -->
<div class="modal fade" id="cancelAdoptionModal" tabindex="-1" aria-labelledby="cancelAdoptionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelAdoptionModalLabel">Cancel Adoption</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to cancel this adoption?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#adoptionCancelledModal" data-bs-dismiss="modal">Yes</button>
            </div>
        </div>
    </div>
</div>

<!-- Second Modal: Adoption Cancelled -->
<div class="modal fade" id="adoptionCancelledModal" tabindex="-1" aria-labelledby="adoptionCancelledModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="adoptionCancelledModalLabel">Adoption Cancelled</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Your adoption has been cancelled.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
