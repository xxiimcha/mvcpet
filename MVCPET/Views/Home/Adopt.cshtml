@model MVCPET.Controllers.HomeController.PetViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Corrected path
}

<style>
    /* General filter button styling */
    .filter-button {
        background: none;
        border: none;
        font-size: 20px;
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        cursor: pointer;
    }

        /* Add underline when active */
        .filter-button[data-active="true"],
        .filter-button:hover {
            text-decoration: underline;
        }

        /* Remove focus outline for a cleaner look */
        .filter-button:focus {
            outline: none;
        }

    .custom-btn {
        background-color: #954930;
        color: #ffffff;
        border: none;
    }

        .custom-btn:hover {
            background-color: #B46449;
            color: white;
        }

    /* Tab Content Styling */
    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    .img-placeholder {
        width: 200px;
        height: 200px;
        border-radius: 150px;
        background-color: #ccc;
        text-align: center;
        line-height: 200px;
        font-size: 20px;
        color: white;
    }
</style>

<div class="mb-9" id="">
    <div class="" data-kt-sticky-name="">
        <div class="">
            <!--begin::Landing hero-->
            <div class="d-flex flex-column flex-center w-100 min-h-350px min-h-lg-500px px-9" style="background: #687451;">
                <!--begin::Heading-->
                <div class="text-center mb-5 mb-lg-10 py-10 py-lg-20">
                    <!-- Title -->
                    <h1 class="text-white lh-base fw-bold fs-2x fs-lg-3x mb-15"><i>Looking for new companions!</i></h1>
                    <h1 class="text-white">Start your journey to giving a pet their forever home today.</h1>

                    <!-- Search Bar -->
                    <input type="text" name="name" value="" class="form-control mx-auto mt-5" style="max-width: 400px;" placeholder="Search" />

                    <center>
                        <!-- Buttons Section -->
                        <div class="d-flex justify-content-center mt-5">
                            <!-- Adoptees Button -->
                            <button class="btn custom-btn mx-2" onclick="switchTab('adoptees')">Adoptees</button>

                            <!-- Adopted Button -->
                            <button class="btn custom-btn mx-2" onclick="switchTab('adopted')">Adopted</button>
                        </div>

                        <!-- Filter Buttons -->
                        <div class="d-flex flex-row justify-content-center">
                            <button class="filter-button" data-active="true" style="margin-right: 10px;">All</button>
                            <button class="filter-button" style="margin-right: 10px;">Cat</button>
                            <button class="filter-button">Dog</button>
                        </div>
                    </center>
                </div>
                <!--end::Heading-->
            </div>
            <!--end::Landing hero-->
            <!--begin::Curve bottom-->
            <div class="landing-curve landing-dark-color mb-10 mb-lg-20">
                <svg viewBox="15 12 1470 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 11C3.93573 11.3356 7.85984 11.6689 11.7725 12H1488.16C1492.1 11.6689 1496.04 11.3356 1500 11V12H1488.16C913.668 60.3476 586.282 60.6117 11.7725 12H0V11Z" fill="currentColor" style="color: #687451;"></path>
                </svg>
            </div>
            <!--end::Curve bottom-->
        </div>
    </div>
</div>


<div class="mb-2">
    <div class="container">
        <!-- Tab Content for Adoptees -->
        <div class="tab-content adoptees-content active" id="adoptees">
            <div class="row">
                @if (Model.Adoptees.Any())
                {
                    @foreach (var pet in Model.Adoptees)
                    {
                        <div class="col-md-3 text-center pet-card" data-species="@pet.Species.ToLower()">
                            <a asp-controller="Home" asp-action="PetDetails" asp-route-id="@pet.Id">
                                <img src="@(!string.IsNullOrEmpty(pet.PhotoPath) ? pet.PhotoPath : "https://via.placeholder.com/200")"
                                     class="rounded-circle img-fluid" width="200" height="200" />
                            </a>
                            <h3 class="mt-2">@pet.Name</h3>
                            <p>@pet.Species</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">No pets available for adoption.</p>
                }
            </div>
        </div>

        <!-- Tab Content for Adopted Pets -->
        <div class="tab-content adopted-content" id="adopted">
            <div class="row">
                @if (Model.AdoptedPets.Any())
                {
                    @foreach (var pet in Model.AdoptedPets)
                    {
                        <div class="col-md-3 text-center pet-card" data-species="@pet.Species.ToLower()">
                            <a asp-controller="Home" asp-action="PetDetails" asp-route-id="@pet.Id">
                                <img src="@(!string.IsNullOrEmpty(pet.PhotoPath) ? pet.PhotoPath : "https://via.placeholder.com/200")"
                                     class="rounded-circle img-fluid" width="200" height="200" />
                            </a>
                            <h3 class="mt-2">@pet.Name</h3>
                            <p>@pet.Species</p>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">No pets have been adopted yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mb-0" id=""></div>

<script>
    function switchTab(tabName) {
        // Hide all tabs
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });

        // Show the selected tab
        document.getElementById(tabName).classList.add('active');
    }
</script>
